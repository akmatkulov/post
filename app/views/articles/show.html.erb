<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <%= image_tag @article.picture.thumb.url, class: "img-show" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @article.title %></h5>
        <p class="card-text"><%= @article.body %></p>
        <p class="card-text"><small class="text-body-secondary"><%= @article.updated_at %></small></p>
      </div>
      <div class="card-body">
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-warning" %>
        <%= link_to "Delete", article_path(@article), data: { "turbo-method": :delete }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
