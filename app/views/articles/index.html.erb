<h2>All Articles</h2>
<% @article.each do |article| %>
  <div class="card mt-3">
    <h5 class="card-header"><%= article.user.email %></h5>
    <div class="card-body">
      <h5 class="card-title"><%= article.title %></h5>
      <p class="card-text"><%= article.body %></p>
      <%= link_to "Show", article_path(article), class: "btn btn-info" %>
    </div>
  </div>
<% end %>
