<h2>All Articles</h2>

  <div class="card-group">
    <% @article.each do |article| %>
    <div class="card">
      <%= image_tag article.picture.url, class: "card-img-top", style: 'height:200px; width:200px;' if article.picture? %>
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.body %></p>
        <p class="card-text"><small class="text-body-secondary"><%= link_to "Show", article_path(article), class: "btn btn-info" %></small></p>
      </div>
      <div class="card-footer">
        <small class="text-body-secondary"><%= article.updated_at %></small>
      </div>

    </div>
    <% end %>
  </div>
